# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# YAML files (Kubernetes, Helm, ArgoCD configs)
[*.{yaml,yml}]
indent_style = space
indent_size = 2
max_line_length = 120

# JSON files
[*.json]
indent_style = space
indent_size = 2
max_line_length = 120

# JSON with Comments (renovate.json, VS Code configs)
[*.jsonc]
indent_style = space
indent_size = 2
max_line_length = 120

# Terraform files
[*.tf]
indent_style = space
indent_size = 2
max_line_length = 120

[*.tfvars]
indent_style = space
indent_size = 2

# HCL files
[*.hcl]
indent_style = space
indent_size = 2
max_line_length = 120

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
max_line_length = 120

# PowerShell scripts
[*.{ps1,psm1}]
indent_style = space
indent_size = 4
max_line_length = 120

# Python files (if any)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# Makefile
[Makefile]
indent_style = tab

# Git config files
[.gitignore]
indent_style = space
indent_size = 2

# Dockerfiles
[Dockerfile*]
indent_style = space
indent_size = 2
max_line_length = 120
